{
    "name": "home-browser",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "devDependencies": {
        "electron": "^28.3.3",
        "electron-builder": "^24.6.1"
    },
    "build": {
        "appId": "com.yourdomain.homebrowser",
        "productName": "Home Browser",
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
